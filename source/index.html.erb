<a href="https://github.com/bcylin/polydicer" target="_blank">
  <img class="ribbon" src="https://camo.githubusercontent.com/365986a132ccd6a44c23a9169022c0b5c890c387/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f7265645f6161303030302e706e67" alt="Fork me on GitHub" data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_red_aa0000.png">
</a>
<div class="container">
  <div class="card front">
    <div id="tagline"><%= data.company.tagline %></div>
    <a href="https://<%= data.company.url %>" target="_blank" id="icook">
      <img src="images/icook.svg" alt="iCook" class="company-img">
      <div class="icook-url"><%= data.company.url %></div>
    </a>
    <img src="images/logo-white.svg" alt="iCook" class="logo">
  </div>
  <div class="card back">
    <div class="stripe"></div>
    <div class="top">
      <span id="position"><%= data.me.position %></span>
      <img src="images/logo-polydice.svg" alt="Polydice" class="icon">
    </div>
    <div class="bottom">
      <div>
        <div class="name"><%= data.me.nickname %></div>
        <div class="name"><%= data.me.fullname %></div>
      </div>
      <ul class="info">
        <% (data.me.info || []).each do |item| %>
          <a href="<%= item.url %>" target="_blank">
            <li>
              <span><i class="fa <%= item.icon %>"></i><%= item.value %></span>
            </li>
          </a>
        <% end %>
      </ul>
      <ul>
        <li><%= data.company.name %></li>
        <li><%= data.company.address %></li>
      </ul>
    </div>
  </div>
</div>
<div class="qrcode">
  <%= generate_qrcode data.me.portfolio || "" %>
</div>
